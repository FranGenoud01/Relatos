{
  "compilerOptions": {
    // === Layout de archivos ===
    "rootDir": "./src",
    "outDir": "./dist",

    // === Target / Módulos (ideal para Node + ts-node-dev) ===
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // === Tipado / tipos ===
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Para poder usar imports de librerías CommonJS tipo:
    // import express from 'express';
    "esModuleInterop": true,

    // === Outputs ===
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
